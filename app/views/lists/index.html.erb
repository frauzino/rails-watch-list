
<div class="banner">
  <div class="container">
    <h1>All your Lists</h1>
    <p>Create your own lists and bookmarks</p>
    <p> <%= link_to 'Create a list', new_list_path, class: "btn btn-primary" %></p>
  </div>
</div>
<div class="container">
  <div class="container-2">
    <div class="d-flex flex-wrap justify-content-center">
      <% @lists.each do |list|%>
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo, height: 300, width: 400, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
          <%= link_to "",
              list_path(list),
              data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
              class: "fa-solid fa-trash" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
