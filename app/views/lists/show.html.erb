<div class="container">
  <div class="container-2">
    <h1><%= @list.name %></h1>
    <h4>
      <div class="list d-flex flex-wrap justify-content-center">
        <% @list.bookmarks.each do |bookmark|%>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
            <div class="movie_title">
              <%= bookmark.movie.title %>
            </div>
            <div class="comment">
              <%= bookmark.comment %>
            </div>
          </div>
          <% end %>
      </div>
    </h4>

    <p><%= link_to 'New Bookmark', new_list_bookmark_path(@list) %></p>
  </div>
</div>
