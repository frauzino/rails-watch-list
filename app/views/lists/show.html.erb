<div class="banner_two"
     style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),
     url(<%= cl_image_path(@list.photo.key) %>)">
  <div class="container">
    <h1><%= @list.name %></h1>
        <p>Add a movie to this list</p>
    <p><%= link_to 'New Bookmark', new_list_bookmark_path(@list), class: "btn btn-primary" %></p>
  </div>
</div>
<div class="container">
  <div class="container-2">
      <div class="list d-flex flex-wrap justify-content-center">
        <% @list.bookmarks.each do |bookmark|%>
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= bookmark.movie.poster_url %>)">
            <div class="movie_title">
              <h3><%= bookmark.movie.title %></h3>
            </div>
            <div class="comment">
              <p><%= bookmark.comment %></p>
            </div>
          </div>
          <% end %>
      </div>

    <p><%= link_to 'New Bookmark', new_list_bookmark_path(@list) %></p>
  </div>
</div>
